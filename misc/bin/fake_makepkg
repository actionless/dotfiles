#!/bin/bash

if [ ! $(grep foobz1 PKGBUILD) ]  && [ ! $(grep foobz2 PKGBUILD) ] ; then
	for line in $(grep "^prepare.*()" PKGBUILD -o) ; do
		echo -e "$line {\n echo \"foo_$line\"\n }" >> PKGBUILD
	done
	for line in $(grep "^package.*()" PKGBUILD -o) ; do
		echo -e "$line {\n echo \"foo_$line\"\n }" >> PKGBUILD
	done
	echo 'package() {
		echo "======= Fake package() ======="
		echo "foobz1"
	}

prepare() {
		echo "======= Fake prepare() ======="
		echo "foobz2"
	}

build() {
		echo "======= Fake build() ======="
		echo "foobz3"
	}' >> ./PKGBUILD
fi
/usr/bin/makepkg --skippgpcheck $@
